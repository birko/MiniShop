{% extends '::base.html.twig' %}

{% block body %}
<form action="{{ path('address_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="full">
  <fieldset>
  <legend>{% trans %}Address edit{% endtrans %}</legend>
  
    <div class="row-fluid">
        <div class="span6">
            {% include 'CoreShopBundle:Address:baseform.html.twig' with {'form': edit_form}%}
        </div>
        <div class="span6">
            {% include 'CoreShopBundle:Address:contactform.html.twig' with {'form': edit_form}%}
            {% include 'CoreShopBundle:Address:companyform.html.twig' with {'form': edit_form}%}
        </div>
    </div >
    <div class="form-actions row-fluid">
        <div class="span12">
            {{ form_rest(edit_form) }}
            <button type="submit" class="btn btn-inverse">{% trans %}Edit{% endtrans %}</button>
            <a href="{{ path('address') }}" class="btn">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </div>
    </div>
  </fieldset>  
</form>
<form action="{{ path('address_delete', { 'id': entity.id }) }}" method="post" class="form-actions row">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-inverse">{% trans %}Delete{% endtrans %}</button>
</form>
{% endblock %}