<form action="{{path('site_contact_form_send')}}" method="post" class="contact-form">
  <div class="row">
    <div class="span4 nolabel">
        {{ form_row(form.email) }}
        {{ form_row(form.name) }}
        {{ form_row(form.phone) }}
    </div>
    <div class="span5 nolabel">
        {{ form_row(form.message) }}
    </div>
</div>
  <div class="row">
    <div class="span4 nolabel">
        {{ form_row(form.verification_code) }}
        {{ form_rest(form) }}
    </div>
    <div class="span5 nolabel">
        <strong>{{verification_code}}</strong>
        <button type="submit" class="button-send pull-right">{% trans %}Send{% endtrans %}</button>
    </div>
</div>
</form>