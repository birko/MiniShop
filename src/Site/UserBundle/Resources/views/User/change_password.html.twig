{% extends '::base.html.twig' %}
{% block body %}
<div id="content-container">
<h1>{% trans %}change.password{% endtrans %}</h1>

<form action="{{ path('SiteUserBundle_password_recovery_do', { 'email' : email, 'hash' : hash }) }}" method="post">
  {% if app.session.hasFlash('error') %}
    <div class="alert alert-error">
        {{ app.session.flash('error') }}
    </div>
  {% endif %}
  {{ form_widget(form) }}
  <button type="submit" class="btn btn-default">{% trans %}general.submit{% endtrans %}</button>
  <a href="{{ path('SiteUserBundle_index') }}" class="btn btn-default btn-inverse">{% trans %}Customer section{% endtrans %}</a>
</form>
</div>
{% endblock %}
