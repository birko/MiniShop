{% extends '::base.html.twig' %}
{% block body %}
<div class="box">
    <h1>{%trans%}Registration{% endtrans %}</h1>
    <form action="{{ path('SiteUserBundle_create') }}" method="post" {{ form_enctype(form) }} class="full">
        {{ form_errors(form) }}
        <div class="row-fluid">
            {{ form_errors(form) }}
            <div class="span12">
                <div class="span4 nolabel">
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}
                </div>
                <div class="span4 nolabel">
                    {% include "CoreShopBundle:Address:baseform.html.twig" with {'form': form.addresses.0} %}
                </div>
                <div class="span4 nolabel">
                    {% include "CoreShopBundle:Address:contactform.html.twig" with {'form': form.addresses.0} %}
                    {% include "CoreShopBundle:Address:companyform.html.twig" with {'form': form.addresses.0} %}
                </div>
            </div>
        </div>
        <div class="row fluid">
            <div class="span12">
                <button type="submit" class="btn btn-inverse"><i class="icon-ok icon-white"></i> {%trans %}Register{% endtrans %}</button>
                {{ form_rest(form) }}
            </div>
        </div>
    </form>
</div>
{% endblock %}