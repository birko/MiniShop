{% extends '::base.html.twig' %}
{% block body %}
{% render  controller("SiteCategoryBundle:Category:breadcrumb" , {'id': product.categories.0.id, 'end': product.title}) %}
<div id="product">
    <div class="row-fluid">
        <div class="image span4">
        {% if product.media is not empty %}
            <div class="full-image thumbnail">
            {% render controller("CoreMediaBundle:Image:display" , {'id': product.media.0.id, 'dir': 'small', 'link_path':'large'}) %}
            </div>
        {% endif %}
        </div>
        <div class="span8">
            <h1>
                {{product.title}}
            </h1>
            {% if product.vendor %}
            <h5>
                {% trans %}Vendor{% endtrans %}: {% include "SiteVendorBundle:Vendor:info.html.twig" with {'entity': product.vendor} %}
            </h5>
            {% endif %}
            <div id="shortdescription">
                {{product.shortDescription|raw}}
            </div>
            <div class="row-fluid">
            {% set price  = product.getMinimalPrice(pricegroup) %}
            {% if price is not empty %}
            <div class="price pull-left lead span4">
                <strong>{{price.priceVAT |number_format(2)}} €</strong>
                <small>vrátane DPH</small>
                <span class="stock">
                {% include "SiteProductBundle:Stock:info.html.twig" with {'entity': product.stock }%}
                </span>
            </div>
            <div class="cart pull-right span8">
                {% include "SiteShopBundle:Cart:add.html.twig" with {'product': product.id, 'title': product.title, 'price':  price.price, 'priceVAT': price.priceVAT, 'amount': 1, 'productId':product.id , 'options': options}%}
            </div>
            {%endif %}
            </div>
        </div>
    </div>
    <div class="info row-fluid">
        {% if product.media is not empty %}
        <div class="gallery span4">
            <div class="row-fluid">
                {% for media in product.media %}
                <div class="thumbnail span4">
                {% render controller("CoreMediaBundle:Image:display", {'id': media.id, 'dir': 'thumb', 'link_path':'large'}) %}
                </div>
                {% endfor %}
            </div>
        </div>   
        {% endif %} 
        <div class="tab-pane active fade in" id="longdescription">
            {{product.longDescription|raw}}
        </div>
        {% include "SiteProductBundle:Attribute:list.html.twig" with {'entities': product.getGroupedAttributes() }%}
    </div>
</div>    
{% endblock %}