{% extends '::base.html.twig' %}
{% block body %}
<h1>{% trans %}Search{% endtrans %}</h1>
<div class="class="row-fluid">
    <div class="product-list span12">
         <div class="row-fluid">
            <div class="sorter span3">
              <span>Zoradiť podľa: </span>
              <span {% if entities.isSorted('p.Title') %}class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Názov', 'p.title') }} </span>
              <span {% if entities.isSorted('p.CreatedAt') %}class="sorted"{% endif %}>{{ knp_pagination_sortable(entities,'Novinka', 'p.createdAt') }} </span>
            </div>
            {{ knp_pagination_render(entities)}}
        </div>
        <div class="row-fluid">
        {% for product in entities %}
        {% include 'SiteProductBundle:Product:item.html.twig' with {'entity': product} %}
        {% endfor %}
        </div>
        <div class="row-fluid">
            {{ knp_pagination_render(entities)}}
        </div>
    </div> 
</div>
{% endblock %}
