{% extends '::admin.html.twig' %}
{% block body %}
<h1>{%trans%}Newsletter Email list{%endtrans%}</h1>

{{ knp_pagination_render(entities)}}
<table class="records_list table table-striped">
    <thead>
        <tr>
            <th>{%trans%}Email{%endtrans%}</th>
            <th>{%trans%}Enabled{%endtrans%}</th>
            <th>{%trans%}Actions{%endtrans%}</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="3">
                <a href="{{ path('newsletter_email_new') }}" class="btn btn-primary">
                    <i class="icon-plus"></i> {%trans%}Create a new email{%endtrans%}
                </a>
           </td>
        </tr>
    </tfoot>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.email }}</td>
            <td>{% if entity.enabled %}<i class="icon-ok"></i>{% endif %}</td>
            <td>
                <a href="{{ path('newsletter_email_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-edit"></i> {%trans%}Edit{%endtrans%}</a>     
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(entities)}}
{% endblock %}
