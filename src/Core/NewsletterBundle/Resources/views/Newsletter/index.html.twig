{% extends '::admin.html.twig' %}
{% block body %}
<h1>{%trans%}Newsletter list{%endtrans%}</h1>
{{ knp_pagination_render(entities)}}
<table class="records_list table table-striped">
    <thead>
        <tr>
            <th>{%trans%}Title{%endtrans%}</th>
            <th>{%trans%}Created at{%endtrans%}</th>
            <th>{%trans%}Actions{%endtrans%}</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="3">
                <a href="{{ path('newsletter_new') }}" class="btn btn-primary">
                    <i class="icon-plus"></i> {%trans%}Create a new newsletter{%endtrans%}
                </a>
           </td>
        </tr>
    </tfoot>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('d.m.Y H:i:s') }}{% endif %}</td>
            <td>
                 <a href="{{ path('newsletter_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-edit"></i> {%trans%}Edit{%endtrans%}</a>
                 <a href="{{ path('newsletter_send', { 'id': entity.id }) }}" class="btn btn-info"><i class="icon-envelope"></i> {%trans%}Send{%endtrans%}</a>
                 <a href="{{ path('newsletter_sendgroup', { 'id': entity.id }) }}" class="btn btn-info"><i class="icon-envelope"></i> {%trans%}Send to group{%endtrans%}</a>
                 <a href="{{ path('newsletter_sendemail', { 'id': entity.id }) }}" class="btn btn-info"><i class="icon-envelope"></i> {%trans%}Send to email{%endtrans%}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(entities)}}
{% endblock %}
