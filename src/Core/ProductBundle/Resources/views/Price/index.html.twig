{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Price list{% endtrans %}</h1>

<table class="records_list table table-striped">
    <thead>
        <tr>
            <td>{% trans %}Default{% endtrans %}</td>
            <th>{% trans %}Price Group{% endtrans %}</th>
            <th>{% trans %}Type{% endtrans %}</th>
            <th>{% trans %}Price{% endtrans %}</th>
            <th>{% trans %}Price VAT{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="6">
                <a href="{{ path('price_new', {'category': category, 'product': product}) }}" class="btn btn-primary"><i class="icon-plus"></i> {% trans %}Create a new entry{% endtrans %}</a>
                <a href="{{ path('product', {'category': category}) }}" class=""> {% trans %}Back to list{% endtrans %}</a>
            </td>
        </tr>
    </tfoot>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{% if entity.default %}<i class="icon-ok"></i>{% endif %}</td>
            <td>{{ entity.priceGroup }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.price | number_format(2) }}</td>
            <td>{{ entity.priceVAT | number_format(2) }}</td>
            <td>
                <a href="{{ path('price_edit', { 'id': entity.id, 'category': category, 'product': product }) }}" class="btn btn-warning"><i class="icon-edit"></i> {% trans %}Edit{% endtrans %}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
