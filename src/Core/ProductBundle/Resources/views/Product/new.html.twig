{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Product creation{% endtrans %}</h1>

<form action="{{ path('product_create', {'category': category}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    {% if cultures | length > 0 %}
	{% include 'CoreCommonBundle:Form:translations.html.twig' with {'form': form.translations, 'cultures': cultures } %}
	{% endif %}
	{{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Create{% endtrans %}</button>
        <a href="{{ path('product', {'category': category}) }}">{% trans %}Back to the list{% endtrans %}</a>
    </p>
</form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="http://tinymce.cachefly.net/4.0/tinymce.min.js"></script>
<script type="text/javascript">
tinymce.init({selector:'textarea'});
</script>
{% endblock %}
