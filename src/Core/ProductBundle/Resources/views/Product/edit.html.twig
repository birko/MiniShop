{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Product edit{% endtrans %}</h1>

<form action="{{ path('product_update', { 'id': entity.id, 'category': category }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Edit{% endtrans %}</button>
        <a href="{{ path('product', {'category': category}) }}"> {% trans %}Back to the list{% endtrans %}</a>
    </p>
</form>

<form action="{{ path('product_delete', { 'id': entity.id, 'category': category }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> {% trans %}Delete{% endtrans %}</button>
</form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
<script type="text/javascript">
bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>
{% endblock %}
