{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Product Media edit{% endtrans %}</h1>

<form action="{{ path('product_media_update', { 'id': entity.id, 'category': category, 'product': product, 'type': entity.type }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
            {{ form_errors(edit_form) }}
			{% if cultures | length > 0 %}
			{% include 'CoreCommonBundle:Form:translations.html.twig' with {'form': edit_form.translations, 'cultures': cultures } %}
			{% endif %}
			{{ form_widget(edit_form) }}
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            {% include "CoreMediaBundle:Media:display.html.twig" with {'entity': entity, 'dir': 'thumb'} %}
        </div>
    </div>
    <p>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Edit{% endtrans %}</button>
        <a href="{{ path('product_media', {'category': category, 'product': product}) }}"> {% trans %}Back to the list{% endtrans %}</a>
    </p>
</form>

<form action="{{ path('product_media_delete', { 'id': entity.id, 'category': category, 'product': product, 'type': entity.type  }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> {% trans %}Delete{% endtrans %}</button>
</form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="http://tinymce.cachefly.net/4.0/tinymce.min.js"></script>
<script type="text/javascript">
tinymce.init({selector:'textarea'});
</script>
{% endblock %}