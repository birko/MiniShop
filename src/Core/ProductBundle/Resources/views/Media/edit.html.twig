{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Product Media edit{% endtrans %}</h1>

<form action="{{ path('product_media_update', { 'id': entity.id, 'category': category, 'product': product }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="span3">
        {% render controller("CoreMediaBundle:Image:display", {'id': entity.id, 'dir': 'thumb'}) %}
    </div>
    <div class="clear"></div>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Edit{% endtrans %}</button>
        <a href="{{ path('product_media', {'category': category, 'product': product}) }}"> {% trans %}Back to the list{% endtrans %}</a>
    </p>
</form>

<form action="{{ path('product_media_delete', { 'id': entity.id, 'category': category, 'product': product  }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> {% trans %}Delete{% endtrans %}</button>
</form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
<script type="text/javascript">
bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>
{% endblock %}