{% endif %}

<form action="{{ path("CoreUserBundle_logincheck") }}" method="post" id="form-login">
    <h1>Prihl√°senie</h1>
    <div>
        <label for="username">{% trans %}Username{% endtrans %}</label>
        <input type="text" id="username" name="_username" value="" />
