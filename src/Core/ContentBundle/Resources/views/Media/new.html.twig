{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Content Media creation{% endtrans %}</h1>

<form action="{{ path('content_media_create', {'category': category, 'content': content}) }}" method="post" {{ form_enctype(form) }}>
     <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
            {{ form_widget(form) }}
        </div>
     </div>
     <p>
         <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Create{% endtrans %}</button>
         <a href="{{ path('content_media', {'category': category, 'content': content}) }}"> {% trans %}Back to the list{% endtrans %}</a>
     </p>
</form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
<script type="text/javascript">
bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>
{% endblock %}
