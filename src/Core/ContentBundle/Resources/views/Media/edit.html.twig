{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Content Media edit{% endtrans %}</h1>

<form action="{{ path('content_media_update', { 'id': entity.id, 'content': content, 'category': category }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="span3 pull-right">
        {% render controller("CoreMediaBundle:Image:display", {'id': entity.id, 'dir': 'thumb'}) %}
    </div>
    <div class="clear"></div>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-success"><i class="icon-ok"></i> {% trans %}Edit{% endtrans %}</button>
        <a href="{{ path('content_media', {'category': category, 'content': content}) }}"> {% trans %}Back to the list{% endtrans %}</a>
    </p>
</form>

<form action="{{ path('content_media_delete', { 'id': entity.id, 'content': content, 'category': category  }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger"><i class="icon-remove"></i> {% trans %}Delete{% endtrans %}</button>
</form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
<script type="text/javascript">
bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>
{% endblock %}