{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Coupon products add list{% endtrans %}</h1>
{{ products.render()| raw}}
<table class="records_list table table-striped">
    <thead>
        <tr>
            <th>{% trans %}Title{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="2">
                <a href="{{ path('coupon_products', {'id': entity.id}) }}" class="btn btn-primary"><i class="icon-backward"></i> {% trans %}Back to coupon products list{% endtrans %}</a>
            </td>
        </tr>
    </tfoot>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.title }}</td>        
            <td>
                <a href="{{ path('coupon_products_add', { 'id': entity.id, 'product': product.id }) }}" class="btn btn-success"><i class="icon-plus"></i> {% trans %}Add{% endtrans %}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ products.render()| raw}}
{% endblock %}
