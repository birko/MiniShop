{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Media list{% endtrans %}</h1>
{{ knp_pagination_render(entities) }}
<table class="records_list table table-striped table-condensed">
    <thead>
        <tr>
            <th class="col-sm-2 col-md-2 col-lg-2">{% trans %}Media{% endtrans %}</th>
            <th>{% trans %}Title{% endtrans %}</th>
			<th>{% trans %}Used count{% endtrans %}</th>
            <th class="col-sm-2 col-md-2 col-lg-2">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    
    <tfoot>
    </tfoot>
    <tbody>
    {% for entity in entities %}
        <tr>
			<td class="col-sm-2 col-md-2 col-lg-2">
				<div title="{{entity.id}}">
					{% include "CoreMediaBundle:Media:display.html.twig" with {'entity': entity, 'dir': 'thumb', 'link_path': ''} %}
				</div>
			</td>
            <td>{{ entity.title }}</td>
			<td>{{ entity.usedCount }}</td>
            <td class="col-sm-2 col-md-2 col-lg-2">
				<a href="{{ path('media_edit', { 'id': entity.id}) }}" class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-edit"></span> {% trans %}Edit{% endtrans %}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(entities) }}
{% endblock %}
