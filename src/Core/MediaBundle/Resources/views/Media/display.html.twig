{% if entity.type == 'image'%}
{% render controller("CoreMediaBundle:Image:display", {'id': entity.id, 'dir': dir, 'link_path': link_path}) %}
{% elseif entity.type == 'video'%}
    {%if entity.videoType == 1 %} {# youtube #}
    <a href="http://www.youtube.com/watch?v={{entity.source}}" class="fancybox-media">
    <img src="//i{{entity.id % 4 + 1 }}.ytimg.com/vi/{{entity.source}}/mqdefault.jpg"  alt ="{{ entity.title }}" class="img-thumbnail"/>
    </a>
    {% endif %}
{% endif %}